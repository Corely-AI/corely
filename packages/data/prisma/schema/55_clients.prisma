model Client {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  email     String?
  phone     String?
  company   String?
  custom    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
  @@unique([tenantId, email])
  @@schema("crm")
}
