{
  "extends": "@corely/tsconfig/react.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,
    "exactOptionalPropertyTypes": false,
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@corely/web-features": ["./src/index.ts"],
      "@corely/web-features/*": ["./src/*"],
      "@corely/web-shared": ["../web-shared/src/index.ts"],
      "@corely/web-shared/*": ["../web-shared/src/*"],
      "@corely/api-client": ["../api-client/src/index.ts"],
      "@corely/auth-client": ["../auth-client/src/index.ts"],
      "@corely/contracts": ["../contracts/src/index.ts"],
      "@corely/ui": ["../ui/src/index.ts"]
    }
  },
  "include": ["src", "../api-client/src", "../auth-client/src", "../contracts/src", "../ui/src"]
}
