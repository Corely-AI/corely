# Skip hook if HUSKY is set to 0
if [ "$HUSKY" = "0" ]; then
  exit 0
fi

# Run unit tests
echo "Running unit tests..."
APP_ENV=test \
WORKFLOW_QUEUE_DRIVER=memory \
WORKFLOW_CLOUDTASKS_TARGET_BASE_URL=http://localhost \
SPEECH_TO_TEXT_PROVIDER=none \
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost \
pnpm test:unit

if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Fix tests and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ Unit tests passed."

# Run format check
echo "Checking formatting..."
pnpm format:check

if [ $? -ne 0 ]; then
  echo "❌ Formatting check failed. Run 'pnpm format' to fix."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ Formatting passed."

# Run ESLint with increased memory limit (fail on errors only, not warnings)
echo "Running ESLint (errors only)..."
NODE_OPTIONS="--max-old-space-size=12288" pnpm exec eslint . --cache --quiet

if [ $? -ne 0 ]; then
  echo "❌ ESLint errors found. Fix errors and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ ESLint passed (no errors)."

# Run lightweight typecheck before push
echo "Running typecheck before push..."
pnpm typecheck

if [ $? -ne 0 ]; then
  echo "❌ Typecheck failed. Fix errors and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ Typecheck passed."

echo "Running API build + dependency guard..."
pnpm build:api

if [ $? -ne 0 ]; then
  echo "❌ API build failed. Fix errors and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ API build succeeded."

echo "Running Worker build + dependency guard..."
pnpm build:worker

if [ $? -ne 0 ]; then
  echo "❌ Worker build failed. Fix errors and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ Worker build succeeded."
