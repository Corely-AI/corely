# Skip hook if HUSKY is set to 0
if [ "$HUSKY" = "0" ]; then
  exit 0
fi

# Run unit tests
echo "Running unit tests..."
pnpm test:unit

if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Fix tests and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ Unit tests passed."

# Run format check
echo "Checking formatting..."
pnpm format:check

if [ $? -ne 0 ]; then
  echo "❌ Formatting check failed. Run 'pnpm format' to fix."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ Formatting passed."

# Run ESLint with increased memory limit (fail on errors only, not warnings)
echo "Running ESLint (errors only)..."
NODE_OPTIONS="--max-old-space-size=8192" pnpm exec eslint . --cache --quiet

if [ $? -ne 0 ]; then
  echo "❌ ESLint errors found. Fix errors and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ ESLint passed (no errors)."

# Run lightweight typecheck before push
echo "Running typecheck before push..."
pnpm typecheck

if [ $? -ne 0 ]; then
  echo "❌ Typecheck failed. Fix errors and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ Typecheck passed."

echo "Running targeted build to ensure code compiles..."
pnpm -r --filter @corely/contracts --filter @corely/domain --filter @corely/data --filter @corely/api --filter @corely/worker build

if [ $? -ne 0 ]; then
  echo "❌ Build failed. Fix errors and try again."
  echo "   To skip: HUSKY=0 git push"
  exit 1
fi

echo "✅ Build succeeded."
