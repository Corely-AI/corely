{
  "name": "corely",
  "private": true,
  "version": "0.0.0",
  "license": "AGPL-3.0-only",
  "type": "module",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": ">=22.19.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "node scripts/build-deps-if-stale.mjs @corely/api && node scripts/build-deps-if-stale.mjs @corely/worker && node scripts/build-deps-if-stale.mjs @corely/web && pnpm -r --parallel dev",
    "build": "pnpm build:packages && pnpm --filter './packages/tooling/**' build && pnpm --filter './services/**' build && pnpm --filter './apps/**' build",
    "build:packages": "pnpm --filter './packages/config' --filter './packages/kernel' --filter './packages/contracts' --filter './packages/prompts' --filter './packages/core' --filter './packages/domain' --filter './packages/data' --filter './packages/public-urls' --filter './packages/offline-core' --filter './packages/offline-web' --filter './packages/offline-rn' --filter './packages/testkit' --filter './packages/integrations/core' --filter './packages/integrations/sumup' --filter './packages/integrations/adyen' --filter './packages/integrations/stripe-terminal' --filter './packages/integrations/microsoft-graph-mail' --filter './packages/integrations/google-gmail' --filter './packages/tooling/vite-config' --filter './packages/email-templates' build",
    "build:web-packages": "pnpm --filter '@corely/vite-config' --filter './packages/api-client' --filter './packages/auth-client' build",
    "build:api": "pnpm --filter @corely/api... build && node scripts/check-service-deps-built.mjs @corely/api",
    "build:worker": "pnpm --filter @corely/worker... build && node scripts/check-service-deps-built.mjs @corely/worker",
    "typecheck": "pnpm -r typecheck",
    "dev:web": "node scripts/build-deps-if-stale.mjs @corely/web && pnpm --filter @corely/web dev",
    "dev:freelancer": "node scripts/build-deps-if-stale.mjs @corely/freelancer && pnpm --filter @corely/freelancer dev",
    "dev:pos": "node scripts/build-deps-if-stale.mjs @corely/pos && pnpm --filter @corely/pos start",
    "dev:public": "node scripts/build-deps-if-stale.mjs @corely/public-web && pnpm --filter @corely/public-web dev",
    "dev:website-runtime": "node scripts/build-deps-if-stale.mjs @corely/website-runtime && pnpm --filter @corely/website-runtime dev",
    "dev:portal": "node scripts/build-deps-if-stale.mjs @corely/portal && pnpm --filter @corely/portal dev",
    "dev:restaurant-listing": "node scripts/build-deps-if-stale.mjs @corely/restaurant-listing && pnpm --filter @corely/restaurant-listing dev",
    "docs:dev": "cd docs-site && npx mint dev",
    "docs:check": "cd docs-site && npx mintlify broken-links",
    "build:web": "pnpm build:packages && pnpm --filter @corely/web build",
    "dev:api": "node scripts/build-deps-if-stale.mjs @corely/api && pnpm --filter @corely/api dev:esbuild",
    "dev:api:debug": "node scripts/build-deps-if-stale.mjs @corely/api && pnpm --filter @corely/api dev:debug",
    "worker:playwright:install": "pnpm --filter @corely/worker exec playwright install chromium",
    "dev:worker": "node scripts/build-deps-if-stale.mjs @corely/worker && pnpm --filter @corely/worker dev",
    "dev:worker:full": "pnpm worker:playwright:install && pnpm dev:worker",
    "dev:worker:tick": "pnpm build:worker && pnpm --filter @corely/worker start:tick",
    "dev:worker:tick:full": "pnpm worker:playwright:install && pnpm dev:worker:tick",
    "prisma:generate": "pnpm --filter @corely/data exec prisma generate",
    "prisma:migrate": "pnpm --filter @corely/data exec prisma migrate dev",
    "prisma:studio": "pnpm --filter @corely/data exec prisma studio",
    "migrate": "pnpm --filter @corely/data exec tsx --env-file=../../.env ../../../node_modules/.bin/prisma migrate dev",
    "seed:directory": "pnpm --filter @corely/api seed:directory",
    "format": "prettier -w .",
    "format:check": "prettier --check .",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "kill3000": "lsof -ti:3000 | xargs kill -9",
    "arch:check": "node scripts/architecture-check.mjs",
    "check": "pnpm lint && pnpm typecheck && pnpm prompt:check",
    "prompt:check": "node scripts/check-prompts.mjs",
    "catalog:sync": "pnpm --filter @corely/api exec tsx --env-file=../../.env src/scripts/catalog-sync.ts",
    "e2e:api:up": "docker compose -f docker-compose.e2e.yml up -d api",
    "e2e:up": "docker compose -f docker-compose.e2e.yml up -d --build",
    "e2e:down": "docker compose -f docker-compose.e2e.yml down -v",
    "e2e": "pnpm --filter @corely/e2e e2e",
    "e2e:pos": "pnpm --filter @corely/e2e e2e:pos",
    "e2e:pos:screens": "pnpm --filter @corely/e2e e2e:pos:screens",
    "e2e:ui": "pnpm --filter @corely/e2e e2e:ui",
    "e2e:report": "pnpm --filter @corely/e2e e2e:report",
    "e2e:ci": "pnpm e2e:up && pnpm e2e && pnpm e2e:down",
    "test": "vitest run --workspace ./vitest.workspace.ts",
    "test:unit": "vitest run --workspace ./vitest.workspace.ts",
    "test:int": "pnpm prisma:generate && vitest run --workspace ./vitest.workspace.int.ts",
    "test:watch": "vitest --workspace ./vitest.workspace.ts --watch",
    "coverage": "vitest run --workspace ./vitest.workspace.ts --coverage"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "globals": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "ts-node": "catalog:",
    "tsconfig-paths": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "author": "Ha Doan <ha@oneway8x.com>",
  "dependencies": {
    "@google-cloud/speech": "^7.2.1",
    "@types/pg": "catalog:",
    "pg": "catalog:"
  }
}
