{
  "extends": "@corely/tsconfig/node.json",
  "compilerOptions": {
    "strict": false,
    "strictNullChecks": false,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@/*": ["src/*"],
      "@corely/contracts": ["../../packages/contracts/src/index.ts"],
      "@corely/contracts/*": ["../../packages/contracts/src/*"],
      "@corely/config": ["../../packages/config/src/index.ts"],
      "@corely/config/*": ["../../packages/config/src/*"],
      "@corely/domain": ["../../packages/domain/src/index.ts"],
      "@corely/domain/*": ["../../packages/domain/src/*"],
      "@corely/data": ["../../packages/data/src/index.ts"],
      "@corely/data/*": ["../../packages/data/src/*"],
      "@corely/kernel": ["../../packages/kernel/src/index.ts"],
      "@corely/kernel/*": ["../../packages/kernel/src/*"],
      "@corely/core": ["../../packages/core/src/index.ts"],
      "@corely/core/*": ["../../packages/core/src/*"],
      "@corely/email": ["../../packages/email/src/index.ts"],
      "@corely/email/*": ["../../packages/email/src/*"],
      "@corely/integrations-core": ["../../packages/integrations/core/src/index.ts"],
      "@corely/integrations-core/*": ["../../packages/integrations/core/src/*"],
      "@corely/integrations-sumup": ["../../packages/integrations/sumup/src/index.ts"],
      "@corely/integrations-sumup/*": ["../../packages/integrations/sumup/src/*"],
      "@corely/integrations-adyen": ["../../packages/integrations/adyen/src/index.ts"],
      "@corely/integrations-adyen/*": ["../../packages/integrations/adyen/src/*"],
      "@corely/integrations-microsoft-graph-mail": [
        "../../packages/integrations/microsoft-graph-mail/src/index.ts"
      ],
      "@corely/integrations-microsoft-graph-mail/*": [
        "../../packages/integrations/microsoft-graph-mail/src/*"
      ],
      "@corely/integrations-google-gmail": [
        "../../packages/integrations/google-gmail/src/index.ts"
      ],
      "@corely/integrations-google-gmail/*": ["../../packages/integrations/google-gmail/src/*"],
      "@corely/public-urls": ["../../packages/public-urls/src/index.ts"],
      "@corely/storage": ["../../packages/storage/src/index.ts"],
      "@corely/storage/*": ["../../packages/storage/src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
