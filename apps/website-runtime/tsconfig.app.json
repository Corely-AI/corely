{
  "extends": "@corely/tsconfig/react.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,
    "exactOptionalPropertyTypes": false,
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@corely/api-client": ["../../packages/api-client/src/index.ts"],
      "@corely/contracts": ["../../packages/contracts/src/index.ts"],
      "@corely/public-api-client": ["../../packages/public-api-client/src/index.ts"],
      "@corely/public-urls": ["../../packages/public-urls/src/index.ts"]
    }
  },
  "include": [
    "src",
    "../../packages/api-client/src",
    "../../packages/contracts/src",
    "../../packages/public-api-client/src",
    "../../packages/public-urls/src"
  ]
}
